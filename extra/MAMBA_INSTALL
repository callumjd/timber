mamba install -c  conda-forge openmmforcefields

mamba install -c conda-forge scikit-learn

mamba install -c conda-forge plotly

mamba install -c anaconda seaborn

pip install adjustText

pip install git+https://github.com/OpenFreeEnergy/cinnabar

