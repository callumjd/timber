# CREATE ENV
conda create -n amber23 python=3.9

conda activate amber23

conda config --set channel_priority false

# INSTALL PACKAGES
conda install matplotlib

conda install -c anaconda networkx

conda install numpy

conda install rdkit -c rdkit

conda install -c "conda-forge/label/ambertools_rc" ambertools

conda install -c conda-forge openff-toolkit

conda install -c conda-forge lomap2

pip install git+https://github.com/OpenFreeEnergy/cinnabar

conda install --channel conda-forge pygraphviz

conda install -c conda-forge openmm # possible to specify cuda here

conda install -c conda-forge openmmforcefields

conda install -c conda-forge scikit-learn

pip install adjustText

conda install -c conda-forge plotly

conda install -c anaconda seaborn

